<script>
let isEnglish=false;

function toggleDarkMode(){
document.body.classList.toggle("dark-mode");
localStorage.setItem("darkMode",document.body.classList.contains("dark-mode"));
}

if(localStorage.getItem("darkMode")==="true"){
document.body.classList.add("dark-mode");
}

function toggleLanguage(){
isEnglish=!isEnglish;

document.getElementById("navHome").innerText=isEnglish?"Home":"Kreu";
document.getElementById("navServices").innerText=isEnglish?"Services":"Shërbime";
document.getElementById("navPricing").innerText=isEnglish?"Pricing":"Çmimet";
document.getElementById("navContact").innerText=isEnglish?"Contact":"Kontakt";
document.getElementById("heroTitle").innerText=isEnglish?"Welcome to Modern Website":"Mirësevini në Website Modern";
document.getElementById("heroText").innerText=isEnglish?"Professional solutions for your business":"Zgjidhje profesionale për biznesin tuaj";
document.getElementById("servicesTitle").innerText=isEnglish?"Our Services":"Shërbimet";
document.getElementById("clientsTitle").innerText=isEnglish?"What Clients Say":"Çfarë Thonë Klientët";
document.getElementById("pricingTitle").innerText=isEnglish?"Pricing Plans":"Çmimet";
document.getElementById("contactTitle").innerText=isEnglish?"Contact":"Kontakt";
document.getElementById("langBtn").innerText=isEnglish?"AL":"EN";
}

let slideIndex=0;
const slides=document.querySelectorAll(".slide");

function showSlides(){
slides.forEach(s=>s.classList.remove("active"));
slideIndex++;
if(slideIndex>slides.length){slideIndex=1;}
slides[slideIndex-1].classList.add("active");
setTimeout(showSlides,3000);
}
showSlides();

window.onscroll=function(){
document.getElementById("topBtn").style.display=
document.documentElement.scrollTop>200?"block":"none";
}

function scrollToTop(){
window.scrollTo({top:0,behavior:'smooth'});
}
</script>

